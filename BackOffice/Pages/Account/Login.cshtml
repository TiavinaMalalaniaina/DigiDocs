@page
@model BackOffice.Pages.Account.LoginModel
@{
    Layout = "_MinimalLayout";
    ViewData["Title"] = "Se Connecter";
}
<main class="bg-gray-50">
  <div class="mx-auto md:h-screen flex flex-col justify-center items-center px-6 pt-8 pt:mt-0">
    <a href="." class="text-2xl font-semibold flex justify-center items-center mb-8 lg:mb-10">
        <img src="~/assts/logo.png" class="h-10 mr-4" alt="DigiDocs Logo">
        <span class="self-center text-2xl font-bold whitespace-nowrap">DigiDocs</span> 
    </a>
    <!-- Card -->
    <div class="bg-white shadow rounded-lg md:mt-0 w-full sm:max-w-screen-sm xl:p-0">
        <div class="p-6 sm:p-8 lg:p-16 space-y-8">
            <h2 class="text-2xl lg:text-3xl font-bold text-gray-900">
                Connection à la plateforme
            </h2>
            <form class="mt-8 space-y-6" method="post">
                <div>
                    <label for="email" class="text-sm font-medium text-gray-900 block mb-2">Email</label>
                    <input asp-for="Email" type="email" name="email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-cyan-600 focus:border-cyan-600 block w-full p-2.5" placeholder="name@gmail.com" required>
                        <span asp-validation-for="Email" style="color:red"></span>
                </div>
                <div>
                    <label for="password" class="text-sm font-medium text-gray-900 block mb-2">Mot de Passe</label>
                    <input asp-for="Password" type="password" name="password" id="password" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-cyan-600 focus:border-cyan-600 block w-full p-2.5" required>
                    <span asp-validation-for="Password" style="color:red"></span>
                </div>
                    <validation-summary asp-validation-summary="All" class="text-red-500"></validation-summary>
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div style="color:red">@Model.ErrorMessage</div>
                    }
                @* <div class="flex items-start">
                    <div class="flex items-center h-5">
                    <input id="remember" aria-describedby="remember" name="remember" type="checkbox" class="bg-gray-50 border-gray-300 focus:ring-3 focus:ring-cyan-200 h-4 w-4 rounded" required>
                    </div>
                    <div class="text-sm ml-3">
                    <label for="remember" class="font-medium text-gray-900">Se Souvenir de moi</label>
                    </div>
                    <a href="#" class="text-sm text-teal-500 hover:underline ml-auto">Mot de passe oublié?</a>
                </div> *@
                <button type="submit" class="text-white bg-cyan-600 hover:bg-cyan-700 focus:ring-4 focus:ring-cyan-200 font-medium rounded-lg text-base px-5 py-3 w-full sm:w-auto text-center">Se Connecter</button>
                <div class="text-sm font-medium text-gray-500">
                    Pas encore enregistré? <a href="https://themewagon.github.io/windster/authentication/sign-up/" class="text-teal-500 hover:underline">Créé un compte</a>
                </div>
            </form>
        </div>
    </div>
</div>

</main>
